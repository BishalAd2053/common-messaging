{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProviderRegistered",
  "type": "object",
  "properties": {
    "eventId": { "type": "string", "format": "uuid" },
    "occurredAt": { "type": "string", "format": "date-time" },
    "aggregateId": { "type": "string", "format": "uuid" },
    "payload": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          },
          "required": ["latitude", "longitude"]
        },
        "serviceTags": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["name", "phone", "address", "location", "serviceTags"]
    }
  },
  "required": ["eventId", "occurredAt", "aggregateId", "payload"]
}
